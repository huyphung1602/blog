<% if notice != nil %>
	<div class="container">
		<p class="alert alert-success" role="alert" id="notice"><%= notice %></p>
	</div>
<% end %>

<div class="container">

  <% if @articles.present? %>
    <%= render @articles %>
  <% else %>
    <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
  <% end %>

  <br>

<!--   <%= link_to 'New Article', new_article_path %> -->

</div>
