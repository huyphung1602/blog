<% if notice != nil %>
	<div class="container">
		<p class="alert alert-success" role="alert" id="notice"><%= notice %></p>
	</div>
<% end %>

<div class="container">

	<div class="row">

	  <div class="col-sm-12">

	      <div class="card">

	    	<div class="card-block">

				<h3 class="card-title"> <%= @article.title %> </h3>

		            <% if @article.updated_at == @article.created_at %>
		              <h6><span> <i class="fa fa-clock-o" style="font-size:24px"></i> Posted at: <%= @article.created_at.strftime("%e  %b %Y %H:%M:%S %p") %>  </span></h6>
		              <br>
		            <% else %>
		              <h6><span> <i class="fa fa-clock-o" style="font-size:24px"></i> Last updated at: <%= @article.updated_at.strftime ("%e %b %Y %H:%M:%S %p") %>  </span></h6>
		              <br>
		            <% end %>

				<p class="card-text"> <%= @markdown.render(@article.body).html_safe %>  </p>
				<br>

				<h6><span> <i class="fa fa-eye" style="font-size:24px"></i> Viewed by <%= @article.impressionist_count %> people</span></h6>
			</div>

			<div class="card-footer">
				<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning btn' %>
				<%= link_to 'Back', articles_path, class: 'btn btn-primary btn' %>
			</div>

		  </div>

	  </div>

	</div>

    <br><br>

</div>

<div class="container">
	<h5>Comments</h5>
	<%= render @article.comments %>

	<h5>Leave a comment:</h5>
	<%= render 'comments/form' %>
</div>
