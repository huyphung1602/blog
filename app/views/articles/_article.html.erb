<div class="row">

  <div class="col-sm-12">

    <div class="card">

        <div class="card-block">
           <h3 class="card-title"> <%= article.title %></h3>

           <% if article.updated_at == nil %>
             <h6><span> <i class="fa fa-clock-o" style="font-size:24px"></i> Posted at: <%= article.created_at.strftime("%e %b %Y %H:%M:%S %p") %>  </span></h6>
             <br>
           <% else %>
             <h6><span> <i class="fa fa-clock-o" style="font-size:24px"></i> Last updated at: <%= article.updated_at.strftime("%e %b %Y %H:%M:%S %p") %>  </span></h6>
             <br>
           <% end %>

           <p class="card-text"> <%= @markdown.render(article.body).html_safe %> </p>
           <br>

           <h6><span> <i class="fa fa-eye" style="font-size:24px"></i> Viewed by <%= article.impressionist_count %> people</span></h6>
           <br>
           <%=raw tag_links(article.all_tags) %>

        </div>

        <div class="card-footer">
           <%= link_to 'Show', article_path(article), class: 'btn btn-success' %>
           <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
           <%= link_to 'Delete', article_path(article), class: 'btn btn-danger',
           method: :delete,
           data: { confirm: 'Are you sure?'} %>
          
        </div>

    </div>

  </div>

</div>
